<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_department_inherit_form" model="ir.ui.view">
            <field name="name">hr.department.inherit.form</field>
            <field name="model">hr.department</field>
            <field name="inherit_id" ref="hr.view_department_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//sheet" position="inside">
                        <notebook>
                            <page name="birthday_reminder" string="Birthday Reminder Recipients">
                                <group>
                                    <field name="birthday_reminder_threshold_days"/>
                                </group>
                                <field name="birthday_reminder_recipient_ids"/>
                            </page>
                        </notebook>
                    </xpath>
                </data>
            </field>
        </record>
    </data>
</odoo>
