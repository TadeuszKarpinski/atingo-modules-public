<?xml version="1.0" ?>
<odoo>

    <data noupdate="0">
        <record id="email_birthday_reminder" model="mail.template">
            <field name="name">Birthday Reminder</field>
            <field name="email_from">${(object.user_id.email and '&quot;%s&quot; &lt;%s&gt;' % (object.user_id.name, object.user_id.email) or '')|safe}</field>
            <field name="subject">Birthday Reminder ${object.name}</field>
            <field name="partner_to"></field>
            <field name="model_id" ref="hr.model_hr_employee"/>
            <field name="auto_delete" eval="False"/>
            <field name="lang"></field>
            <field name="body_html" type="html">
<div>
Birthday
</div>
            </field>
        </record>
    </data>
</odoo>
